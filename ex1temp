public class MyClass {
    public static void main(String args[]) {
      caller();
      
    }
    public static void caller(){
        int[] myIntArray = {1,2,3,4,5};
        int myInt = myIntArray[2];
        
        String nums = "";
        for(int i:myIntArray){
            nums += i+",";
            
        }
        
        System.out.println("The Array before calling = " + nums);
        System.out.println("The Int before calling = " + myInt);
        
        responding(myInt,myIntArray);
        
        nums = "";
        for(int i:myIntArray){
            nums += i+",";
            
        }
        
        System.out.println("The Array after calling = " + nums);
        System.out.println("The Int after calling = " + myInt);
    }
    
    public static void responding(int myInt, int[] myIntArray){
        myInt = 67;
        myIntArray[3] = 205;
        
        String nums = "";
        for(int i:myIntArray){
            nums += i+",";
            
        }
        System.out.println("The Array during calling = " + nums);
        System.out.println("The Int during calling = " + myInt);
        
        
    }
}
